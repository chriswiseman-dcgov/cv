<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" xmlns="http://openhbx.org/api/terms/1.0" targetNamespace="http://openhbx.org/api/terms/1.0" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0" vc:minVersion="1.1">
	<xs:include schemaLocation="common.xsd"/>
	<xs:element name="employer" type="EmployerType">
		<xs:annotation>
			<xs:documentation>SHOP employer</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:complexType name="EmployerType">
		<xs:sequence>
			<xs:element name="name" type="xs:string"/>
			<xs:element name="exchange_employer_id" type="xs:string"/>
			<xs:choice>
				<xs:element name="fein" type="FederalTaxIdType"/>
				<xs:element name="carrier_employer_group_id" type="xs:string"/>
			</xs:choice>
		</xs:sequence>
	</xs:complexType>
	<xs:element name="employer_employee_event" type="EmployerEmployeeEventType"/>
	<xs:complexType name="EmployerEmployeeEventType">
		<xs:complexContent>
			<xs:extension base="EventType">
				<xs:sequence>
					<xs:element ref="enrollment_group_uri"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:element name="enrollment_group_uri" type="xs:anyURI">
		<xs:annotation>
			<xs:documentation>Dereferenceable identifier for enrollment group instance, e.g.urn:dc0:enrollment_group:_id</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:element name="employer_employee_uri" type="xs:anyURI" substitutionGroup="resource_instance_uri">
		<xs:annotation>
			<xs:documentation>Dereferenceable identifier for employee instance, e.g. urn:dc0:employer:_id:employee:_id</xs:documentation>
		</xs:annotation>
	</xs:element>
</xs:schema>
